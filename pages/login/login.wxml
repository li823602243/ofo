<!--pages/login/login.wxml-->
<view class="login-content">
<view class="login-logo">
<image class="login-avater" src="../../images/ofo.jpg"/>
<view class="login-title">ofo共享单车</view>
</view>
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <input name="input" id="phoneNumber" placeholder="输入手机号码" bindchange="bindChange" />
  </view>
  <view class="section section-second">
    <input name="input" id="verify" class="login-pass"  placeholder="输入验证码" bindchange="bindChange"  />
    <button class="login-verify" id="122" bindtap="tapName">获取验证码</button>
  </view>
  <view class="section">
      <label><checkbox class="login-check" value="checkbox1"/>我已阅读，并同意《用户注册协议》</label>
  </view>
  <view class="btn-area">
    <button formType="submit" >验证手机</button>
  </view>
</form>
<view class="bottom-bar">
<view>
<image src="../../images/WEIXIN.png" class="login-img"></image>
微信登录
</view>
<view class="login-center"></view>
<view>
<image src="../../images/QQ.png" class="login-img"></image>
QQ登录
</view>
</view>
</view>
