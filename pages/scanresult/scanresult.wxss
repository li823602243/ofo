/* pages/scanresult/scanresult.wxss */
.content{
    width: 100%;
    height:100%;
    margin: 0 auto

}
.scan-top{
    display: inline-block;
    width: 100%;
    text-align: center;
    margin-top: 50px;
    font-size: 20px;
    font-weight: 700
}
.scan-content{
    margin-top:100px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
}
.scan-free{
    font-size: 20px;
    font-weight: 700
}
.scan-time{
    font-size: 40px;
    margin-top: 20px
}
.btn-area{
    margin-top: 120px;
}
.btn-area  button{
    color: #ffffff;
    height: 50px;
    line-height: 50px;
    width: 80%;
    margin-bottom: 30px;
    border-radius: 10px;
}
.btn-area :first-child{
    background-color: #e64340;
}
.btn-area :last-child{
    background-color: #1aad19;
}